<div class="container">
  <h1>User <%= @user.name %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @user.name %></p>
</div>
<div>
  <strong>ID</strong>:<br />
  <p><%= @user.id %></p>
</div>
<div>
  <strong>Email</strong>:<br />
  <p><%= @user.email %></p>
</div>
<a href="/users">Home</a> |
<a href="/users/<%= @user.id %>/edit">Edit</a> |
<a href="/users/<%= @user.id %>/destroy">Destroy</a>
  
<ul>
  <% @gifs.each do |gif| %>
  <li><a href="/gifs/<%= gif.id %>"><img class="image_display" src="<%= gif.url %>"></a></li>
  <% end %>
</ul>

</div>